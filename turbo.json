{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalDependencies": ["**/.env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": ["$TURBO_DEFAULT$", "**/.env*"]
    },
    "generate": {
      "dependsOn": ["^generate"],
      "outputs": ["generated/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["test-results/**", "playwright-report/**"]
    },
    "test:e2e": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["test-results/**", "playwright-report/**"]
    }
  },
  "globalEnv": [
    "CRON_SECRET",
    "POSTGRES_URL",
    "POSTGRES_PRISMA_URL",
    "NOVU_SECRET_KEY",
    "NEXT_PUBLIC_GOOGLE_MAPS_API_KEY",
    "NEXT_PUBLIC_GOOGLE_OATH_CLIENT_ID",
    "GOOGLE_OATH_CLIENT_SECRET",
    "GOOGLE_MAPS_API_SECRET",
    "PAYSTACK_SECRET_KEY",
    "BETTER_AUTH_SECRET_KEY",
    "SUPABASE_URL",
    "SUPABASE_SERVICE_ROLE_KEY",
    "NEXT_PUBLIC_SUPABASE_URL",
    "NEXT_PUBLIC_SUPABASE_ANON_KEY",
    "NEXT_PUBLIC_NOVU_APPLICATION_IDENTIFIER",
    "NOVU_API_SECRET",
    "DATABASE_URL",
    "DIRECT_URL",
    "BETTER_AUTH_URL",
    "BETTER_AUTH_SECRET",
    "SUPABASE_SERVICE_ROLE",
    "POSTGRES_URL_NON_POOLING",
    "POSTGRES_USER",
    "POSTGRES_HOST",
    "POSTGRES_PASSWORD",
    "POSTGRES_DATABASE",
    "SUPABASE_ANON_KEY",
    "SUPABASE_JWT_SECRET",
    "TRIGGER_PROJECT_ID",
    "TRIGGER_SECRET_KEY",
    "VERCEL_ENV",
    "VERCEL_PROJECT_PRODUCTION_URL",
    "VERCEL_URL",
    "RESEND_API_KEY"
  ]
}
